{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-6",
  "plugin": [
    "opencode-antigravity-auth@latest",
    "@tarquinen/opencode-dcp@latest",
    "oh-my-opencode@beta"
  ],
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      ".env.example": "allow",
      "*.env.example": "allow",
      "*/.env": "deny",
      "*/.env.*": "deny",
      "*/.env.example": "allow",
      "*/secrets/*": "deny",
      "**/secrets/*": "deny",
      "*/auth.json": "deny",
      "**/auth.json": "deny",
      "*credential*": "deny",
      "**/*credential*": "deny",
      "*.pem": "deny",
      "*.key": "deny",
      "**/id_rsa*": "deny",
      "**/id_ed25519": "deny",
      "**/id_ecdsa": "deny"
    },
    "edit": {
      "*": "allow",
      "*.env": "ask",
      "*/.env": "ask",
      "*/secrets/*": "deny",
      "**/secrets/*": "deny",
      "*/auth.json": "deny",
      "**/auth.json": "deny",
      "*.pem": "deny",
      "*.key": "deny"
    },
    "bash": {
      "*": "allow",
      "git *": "allow",
      "docker *": "allow",
      "docker-compose *": "allow",
      "npm *": "allow",
      "yarn *": "allow",
      "pnpm *": "allow",
      "cat *.env": "deny",
      "cat */.env": "deny",
      "cat */secrets/*": "deny",
      "cat *auth.json": "deny",
      "cat *.pem": "deny",
      "cat *.key": "deny",
      "cat *id_rsa*": "deny",
      "cat *id_ed25519*": "deny",
      "head *.env": "deny",
      "head */.env": "deny",
      "tail *.env": "deny",
      "tail */.env": "deny",
      "less *.env": "deny",
      "less */secrets/*": "deny",
      "rm compose.yaml": "ask",
      "rm docker-compose.yml": "ask",
      "rm docker-compose.yaml": "ask",
      "rm Dockerfile": "ask",
      "rm entrypoint.sh": "ask",
      "rm -rf *": "deny",
      "rm -r /*": "deny",
      "rm -rf /": "deny",
      "rm -rf /*": "deny",
      "rm -rf ~": "deny",
      "rm -rf ~/*": "deny",
      "> *.env": "deny",
      "chmod 777 *": "deny",
      "curl * | bash": "deny",
      "curl * | sh": "deny",
      "wget * | bash": "deny",
      "wget * | sh": "deny"
    },
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "task": "allow",
    "skill": "allow",
    "webfetch": "allow",
    "external_directory": "allow",
    "doom_loop": "ask"
  },
  "provider": {
    "google": {
      "name": "Google",
      "models": {
        "antigravity-gemini-3-pro-high": {
          "name": "Gemini 3 Pro High (Antigravity)",
          "thinking": true,
          "attachment": true,
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "antigravity-gemini-3-pro-low": {
          "name": "Gemini 3 Pro Low (Antigravity)",
          "thinking": true,
          "attachment": true,
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "attachment": true,
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        }
      }
    }
  }
}
